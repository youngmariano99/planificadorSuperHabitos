@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex gap-3 align-items-center">
                        <span class="fw-bold">@context.User.Identity?.Name</span>
                        <a href="/logout" class="btn btn-sm btn-outline-danger">Salir</a>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex gap-2">
                        <a href="/login" class="btn btn-sm btn-outline-primary">Ingresar</a>
                        <a href="/register" class="btn btn-sm btn-primary">Registrarse</a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>